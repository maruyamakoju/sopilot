# SOPilot Environment Configuration
# Copy to .env and fill in your values: cp .env.example .env

# ---------------------------------------------------------------------------
# Core
# ---------------------------------------------------------------------------
SOPILOT_DATA_DIR=/data
SOPILOT_QUEUE_BACKEND=rq
SOPILOT_REDIS_URL=redis://redis:6379/0
SOPILOT_UPLOAD_MAX_MB=1024
SOPILOT_MIN_SCORING_CLIPS=4

# ---------------------------------------------------------------------------
# Authentication (all optional â€” defaults to admin-only when unconfigured)
# ---------------------------------------------------------------------------
SOPILOT_AUTH_REQUIRED=true
SOPILOT_API_TOKEN=
SOPILOT_API_TOKEN_ROLE=admin
SOPILOT_API_ROLE_TOKENS=
SOPILOT_BASIC_USER=
SOPILOT_BASIC_PASSWORD=
SOPILOT_BASIC_ROLE=admin
SOPILOT_AUTH_DEFAULT_ROLE=admin

# ---------------------------------------------------------------------------
# Audit
# ---------------------------------------------------------------------------
SOPILOT_AUDIT_SIGNING_KEY=
SOPILOT_AUDIT_SIGNING_KEY_ID=local

# ---------------------------------------------------------------------------
# Privacy
# ---------------------------------------------------------------------------
SOPILOT_PRIVACY_MASK_ENABLED=false
SOPILOT_PRIVACY_MASK_MODE=black
SOPILOT_PRIVACY_MASK_RECTS=
SOPILOT_PRIVACY_FACE_BLUR=false

# ---------------------------------------------------------------------------
# Embedder (heuristic | vjepa2 | auto)
# ---------------------------------------------------------------------------
SOPILOT_EMBEDDER_BACKEND=auto
SOPILOT_EMBEDDER_FALLBACK_ENABLED=true
SOPILOT_EMBEDDING_DEVICE=auto
SOPILOT_VJEPA2_REPO=facebookresearch/vjepa2
SOPILOT_VJEPA2_VARIANT=vjepa2_vit_large
SOPILOT_VJEPA2_PRETRAINED=true
SOPILOT_VJEPA2_SOURCE=hub
SOPILOT_VJEPA2_LOCAL_REPO=
SOPILOT_VJEPA2_LOCAL_CHECKPOINT=

# ---------------------------------------------------------------------------
# Nightly Training
# ---------------------------------------------------------------------------
SOPILOT_NIGHTLY_ENABLED=false
SOPILOT_NIGHTLY_HOUR_LOCAL=2
SOPILOT_NIGHTLY_MIN_NEW_VIDEOS=10

# ---------------------------------------------------------------------------
# VIGIL-RAG Infrastructure (optional)
# ---------------------------------------------------------------------------
VIGIL_POSTGRES_URL=postgresql://vigil_user:vigil_dev_password@localhost:5432/vigil
VIGIL_QDRANT_HOST=localhost
VIGIL_QDRANT_PORT=6333
VIGIL_QDRANT_GRPC_PORT=6334
