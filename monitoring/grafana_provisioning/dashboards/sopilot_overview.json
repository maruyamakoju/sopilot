{
  "title": "SOPilot Overview",
  "uid": "sopilot-overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Score Queue Depth",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sopilot_queue_depth",
          "legendFormat": "queue depth",
          "datasource": "Prometheus"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [
        { "color": "green", "value": null },
        { "color": "yellow", "value": 5 },
        { "color": "red", "value": 20 }
      ] } } }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Embed Requests (total)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sopilot_embed_requests_total",
          "legendFormat": "requests",
          "datasource": "Prometheus"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Embedder Failed Over",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sopilot_embed_failed_over",
          "legendFormat": "failed over",
          "datasource": "Prometheus"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [
        { "color": "green", "value": null },
        { "color": "red", "value": 1 }
      ] } } }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "VRAM Free (bytes)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sopilot_vram_free_bytes",
          "legendFormat": "vram free",
          "datasource": "Prometheus"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Embed Request Rate",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(sopilot_embed_requests_total[2m])",
          "legendFormat": "requests/s",
          "datasource": "Prometheus"
        },
        {
          "expr": "rate(sopilot_embed_fallback_uses_total[2m])",
          "legendFormat": "fallback/s",
          "datasource": "Prometheus"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Queue Depth Over Time",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sopilot_queue_depth",
          "legendFormat": "queue depth",
          "datasource": "Prometheus"
        }
      ]
    }
  ]
}
